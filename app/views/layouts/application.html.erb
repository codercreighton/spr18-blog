<!DOCTYPE html>
<html>
  <head>
    <title>Spr18Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag "fork_knife.png" %>
  </head>

  <body>
    <div class="btn-div-color">
    <ul class="nav justify-content-end">
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "btn btn-secondary" %>
      </li>
      <li class="nav-item">
        <%= link_to "New Post", new_post_path, class: "btn btn-secondary" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item">
            <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-secondary" %>
        </li>
        <li class="nav-item">
            <%= link_to "Sign Out", destroy_user_session_path, :method => :delete, class: "btn btn-secondary" %>
        </li>
        <li>Welcome <%= current_user.username %></li>
       <% end %> 
      
    </ul>
  </div>
  <div class="jumbotron">
    
    
      <h1>Food for Thought</h1>

    </div>
  	<div class="container">
	    <%= yield %>
	  </div>
  </body>
</html>
